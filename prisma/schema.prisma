generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId String @id @default(uuid())
  email String 
  name String   
  Spaces Spaces[]
  Upvotes Upvotes[]
}   

model Spaces {
  spacesId String @id @default(uuid())
  name String? 
  userId String 
  user User @relation(fields: [userId],references: [userId])
  Songs Songs[]
  Upvotes Upvotes[]
}   

model Songs {
  songId String @id @default(uuid())
  name String?
  url String
  active Boolean @default(false)
  spaceId String 
  Space Spaces @relation(fields: [spaceId],references: [spacesId])
  Upvotes Upvotes[]
}

model Upvotes {
  SongId String 
  UserId String 
  SpaceId String
  User User @relation(fields: [UserId],references: [userId])
  Songs Songs @relation(fields: [SongId],references: [songId])
  Spaces Spaces @relation(fields: [SpaceId],references: [spacesId])
  @@id([UserId,SongId])
}

  